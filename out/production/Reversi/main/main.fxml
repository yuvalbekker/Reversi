<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<StackPane fx:id="rootPane"
           xmlns:fx="http://javafx.com/fxml/1"
           xmlns="http://javafx.com/javafx/8"
           fx:controller="main.MainController">
    <VBox spacing="20">
        <MenuBar fx:id="menuBar">
            <menus>
                <Menu text="Options">
                    <items>
                        <MenuItem text="Start" onAction="#handleStartAction"/>
                        <MenuItem text="Settings" onAction="#handleSettingsAction"/>
                        <SeparatorMenuItem/>
                        <MenuItem text="Exit" onAction="#handleExitAction"/>
                    </items>
                </Menu>
                <Menu text="Help">
                    <items>
                        <MenuItem text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <HBox alignment="CENTER">
            <ImageView>
                <image>
                    <Image url="@../reversi.png"/>
                </image>
            </ImageView>
        </HBox>
        <HBox alignment="CENTER">
            <Button text="Start Game" onAction="#handleStartAction"/>
        </HBox>
    </VBox>
</StackPane>
